[general]
accounts = mailru, spbpu
starttls = yes
ssl = yes
pythonfile = ~/.config/mutt/credentials/imappwd.py

[Account mailru]

localrepository = mailru-local
remoterepository = mailru-remote

[Repository mailru-remote]
auth_mechanisms = LOGIN
type = IMAP
remoteuser = ejiek@mail.ru
sslcacerfile = /etc/ssl/cets/ca-certificates.crt
remotepasseval = mailpasswd("mailru")
remotehost = imap.mail.ru
remoteport = 993
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda folder: {'&BB4EQgQ,BEAEMAQyBDsENQQ9BD0ESwQ1-': 'sent',
                            '&BBgEQQRFBD4ENARPBEkEOAQ1-': 'outbox',
                            '&BCcENQRABD0EPgQyBDgEOgQ4-': 'drafts',
                            '&BCEEPwQwBDw-': 'spam',
                            '&BCMENAQwBDsENQQ9BD0ESwQ1-': 'trash',
                            'INBOX': 'inbox'}.get(folder, folder)

[Repository mailru-local]
type = Maildir
localfolders = ~/.mail/mailru
nametrans = lambda folder: {'sent': '&BB4EQgQ,BEAEMAQyBDsENQQ9BD0ESwQ1-',
                            'outbox': '&BBgEQQRFBD4ENARPBEkEOAQ1-',
                            'drafts': '&BCcENQRABD0EPgQyBDgEOgQ4-',
                            'spam': '&BCEEPwQwBDw-',
                            'trash': '&BCMENAQwBDsENQQ9BD0ESwQ1-',
