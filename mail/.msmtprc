# vim:filetype=msmtp
defaults
auth	on
tls	on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
tls_starttls off
logfile	~/.msmtp.log


account spbpu
host smtp.mail.ru
port 465
from vladislav.petrov@spbpu.com
user vladislav.petrov@spbpu.com
passwordeval "gpg -d --quiet --for-your-eyes-only --no-tty ~/.config/mutt/credentials/spbpu.gpg | sed -e '$a\'"
